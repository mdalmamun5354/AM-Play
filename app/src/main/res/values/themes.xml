  <!--  Btn  -->
    <style name="btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="btn.borderGradient">
        <item name="android:background">@drawable/bg_gradient_border_button_selected</item>
    </style>
    <style name="btn.setInput">
        <item name="android:layout_width">@dimen/dp_30</item>
        <item name="android:backgroundTint">@color/trans</item>
        <item name="android:src">@drawable/ic_auto_awesome_24</item>
    </style>

  <!-- Tag Style -->
    <style name="tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dp_6</item>
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
        <item name="android:paddingStart">@dimen/dp_10</item>
        <item name="android:paddingEnd">@dimen/dp_10</item>
    </style>
    <style name="tag.selected">
        <item name="android:background">@drawable/bg_gradient_border_button_selected</item>
    </style>
    <style name="tag.normal">
        <item name="android:background">@drawable/bg_gradient_border_button_normal</item>
    </style>

<!--  textInputLayout   -->
    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
